{
  "git": {
    "commitMessage": "v${version}",
    "tagAnnotation": "v${version}",
    "pushRepo": "upstream"
  },
  "npm": {
    "publish": false
  },
  "github": {
    "release": true,
    "releaseName": "v${version}",
    "tokenRef": "GITHUB_TOKEN_POOLIFIER"
  },
  "hooks": {
    "after:bump": "npm run sonar:properties"
  },
  "plugins": {
    "@release-it/keep-a-changelog": {
      "filename": "CHANGELOG.md",
      "addUnreleased": true
    }
  }
}
