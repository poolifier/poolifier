  "version": "0.2.0",
  "configurations": [
    {
      "type": "pwa-node",
      "request": "launch",
      "name": "Launch Test Debug",
      "cwd": "${workspaceFolder}",
      // "preLaunchTask": "Development build",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run-script", "test:debug"],
      "skipFiles": ["<node_internals>/**"],
      "stopOnEntry": true
    },
    {
      "type": "pwa-node",
      "request": "launch",
      "name": "Launch Benchmark Debug",
      "cwd": "${workspaceFolder}",
      // "preLaunchTask": "Development build",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run-script", "benchmark:debug"],
      "skipFiles": ["<node_internals>/**"],
      "stopOnEntry": true
    }
  ]
}
