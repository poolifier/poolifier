{
  "$schema": "https://json.schemastore.org/mocharc",
  "parallel": true,
  "diff": true,
  "package": "./package.json",
  "timeout": 20000,
  "full-trace": true,
  "exit": true,
  "enable-source-maps": true,
  "reporter": "mochawesome",
  "reporter-options": "reportDir=outputs/mochawesome-report,json=false",
  "require": ["mochawesome/register"]
}
